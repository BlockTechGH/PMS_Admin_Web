                            <div class="row">
                                <div class="col-lg-3">
                                    <h4 style="color:black;"><strong>LOIs</strong></h4>
                                </div>
                                <div class="col-lg-3"></div>
                                <div class="col-lg-3"></div>
                                <div class="col-lg-3 float-right">

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="">
                                    <div class="row">
                                        <div class="col-lg-3" style="margin-top: 30px;">
                                            <button asp-action="NewLOI" asp-controller="LOI" class="btn btn-primary" style="border-radius:10px;">New LOI <i class="fa fa-plus-square-o" style="font-size:20px;border-radius:10px;"></i></button>
                                        </div>
                                        <div class="col-lg-3"></div>
                                        <div class="col-lg-3">
                                            <div class="form-group">
                                                <label class="control-label text-black-50">Search LOI No</label>
                                                <input id="txtSearchLOI" class="form-control" type="text" style="border-radius: 10px;"/>
                                            </div>
                                        </div>
                                        <div class="col-lg-3">
                                            <div class="form-group" style="padding-top: 32px;">
                                                <button id="btnSearch" type="button" class="btn btn-primary" style="border-radius: 10px;">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div style="overflow-y:auto; overflow-x:auto">
                                <table class="table-bordered" cellpadding="5" cellspacing="5" style="width:100%;">
                                    <thead class="bg-success">
                                        <tr>
                                            <th hidden></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 150px">LOI No</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 100px">Inq No</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 100px">LE Name</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 345px;">Client Name</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 120px">Client Source</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px;">Property Type</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 190px">Property Name</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 175px">Lease Date</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 100px">Status</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 155px">Approve and Mail</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 90px">LC</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 125px;">LOI Document</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 120px;">Cancel/Active</label></th>
                                            <th class="table-bordered" colspan="3"><label style="color: black; font-size: 17px; width: 100px; text-align: center;">Actions</label></th>


                                        </tr>
                                    </thead>
                                    <tbody id="tbody" class="bg-white">
                                        @foreach (var item in Model.loiinformations)
                                        {
                                            <tr>
                                                <td hidden>@item.Id</td>
                                                <td style="color:black;">@item.LoiNo1</td>
                                                <td style="color:black;">@item.Inqno</td>
                                                <td style="color:black;">@item.Lename</td>
                                                <td style="color:black;">@CommonRepository.Truncate(item.ClientName, 40)</td>
                                                <td style="color:black;">@item.ClientSource</td>
                                                <td style="color:black;">@item.PropertySource</td>
                                                <td style="color:black;">@item.PropertyName</td>
                                                <td style="color:black;">@(Convert.ToDateTime(item.Leasedate).ToShortDateString())</td>
                                                <td style="color:black;">@item.LoiStatus</td>
                                                @if (item.Loimailstatus == null)
                                                {
                                                    <td style="color:black;">Confirm</td>
                                                }
                                                else
                                                {
                                                    <td style="color:black;">@item.Loimailstatus</td>
                                                }

                                                @if (item.Lccreate != null)
                                                {
                                                    <td style="text-align: center;">
                                                        <a href="#" onclick="createlc(@item.Id)">@item.Lccreate</a>
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td style="text-align: center;">
                                                        <a href="#" onclick="createlc(@item.Id)">Create LC</a>
                                                    </td>
                                                }
                                                
                                                <td style="text-align: center;">
                                                    <a href="@Url.Action("ViewLOI", "LOI",new { id = item.Id })">View</a>
                                                </td>
                                                <td style="text-align: center;">
                                                    <a asp-route-id="@item.Id">Cancel</a>
                                                </td>
                                                <td style="text-align: center;">
                                                    <a asp-controller="LOI" asp-action="EditLOI" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                </td>
                                                <td style="text-align: center;">
                                                    <a href="javascript:void(0)" id="@item.Id" class="deleteprompt"><i style="color:red" class="fa fa-trash" aria-hidden="true"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
