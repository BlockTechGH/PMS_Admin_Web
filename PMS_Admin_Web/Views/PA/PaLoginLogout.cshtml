@{
    ViewData["Title"] = "Login / Logout";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
        };
    </script>

}

<script>
    $(document).ready(function () {
        $('.deleteprompt').click(function () {
            var confirmMessageBox = confirm('Are you sure you wish to delete this record ?');
            if (confirmMessageBox) {
                Id = $(this).attr('id');
                //alert(pryEmpId);
                $.ajax({
                    type: 'GET',
                    url: "@Url.Action("DeleteAttendanceList", "MovingInOut")",
                    data: { id: Id },

                    success: function (response) {
                        alert(response);
                        location.reload();
                    },
                    error: function (err) {
                        alert(err);
                        location.reload();
                    }
                });
            }
        });

        $('#btnlogin').click(function () {
            var txtremarks = $('#txtremarks').val();
            $.ajax({
                type: "POST",
                data: { txtremarks: txtremarks},
                url: "@Url.Action("BtnLoginPaLoginLogout", "PA")",
                success: function (response) {
                    alert(response);
                    window.location.reload();
                }
            })
        })

        $('#btnlogout').click(function () {
            var txtremarks = $('#txtremarks').val();
            $.ajax({
                type: "POST",
                data: { txtremarks: txtremarks},
                url: "@Url.Action("BtnLogoutPaLoginLogout1", "PA")",
                success: function (response) {
                    if (response == "LogOut is already done") {
                        var confirmMessageBox = confirm('LogOut is already done, Do you want to enter again ?');
                        if (confirmMessageBox) {
                            $.ajax({
                                type: "POST",
                                data: { txtremarks: txtremarks },
                                url: "@Url.Action("BtnLogoutPaLoginLogout2", "PA")",
                                success: function (response) {
                                    alert(response);
                                    window.location.reload();
                                }
                            })
                        }
                    }
                    else {
                        alert(response);
                        window.location.reload();
                    }
                }
            })
        })
    })
</script>

