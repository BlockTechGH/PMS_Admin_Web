@{
    ViewData["Title"] = "sourceprocessother";
    Layout = "";
}

@model PMS_Admin_Web.Models.Marketing.SourceProcessModel;

<html>
<head>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link href="~/css/printlandscape.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            window.print();
        })
    </script>
</head>
<body>
    <table class="table-bordered" style=" border: solid; width: 1300px; ">
        <thead>
            <tr>
                <th>
                    <img src="~/icon/q8logo.png" style="width: 140px; height: 100px; margin-left: -70px;" />
                </th>
                <th>
                    <h3>Progress for Source Enquiries</h3>
                </th>
                <th>@DateTime.Today.ToShortDateString()</th>
            </tr>
            <tr>
                <th></th>
                <th></th>
                <th>Source Name : @Model.SourceName</th>
            </tr>

        </thead>

    </table>

    <table class="table-bordered" style=" border: solid; width: 1300px; ">
        <thead>
            <tr style="background-color: chocolate; color: antiquewhite;">
                <th style="width: 117px;"><h4>Inquiry No</h4></th>
                <th style="width: 100px;"><h4>LE Name</h4></th>
                <th style="width: 200px;"><h4>Client Name</h4></th>
                <th style="width: 180px;"><h4>Contact</h4></th>
                <th style="width: 110px;"><h4>Property Requirements</h4></th>
                <th style="width: 90px;"><h4>Inquiry Status</h4></th>
                <th style="width: 111px;"><h4>Last PT On</h4></th>
                <th style="width: 111px;"><h4>PT Type</h4></th>
                <th style="width: 111px;"><h4>PT Remarks</h4></th>
                <th style="width: 111px;"><h4>Last Action On</h4></th>
                <th><h4>Actions Taken</h4></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.sourceprocesses)
            {
                <tr style="background-color: burlywood;">
                    <td>@obj.cglrefno</td>
                    <td>@obj.completedby</td>
                    <td>@obj.ClientName</td>
                    <td>@obj.mobile</td>
                    <td>@obj.propertytype-@obj.Bed</td>
                    <td>@obj.InquiryStatus</td>
                    @if (obj.ptdate == null)
                    {
                        <td>-</td>
                    }
                    else
                    {
                        <td>@DateTime.ParseExact(obj.ptdate,"MM/dd/yyyy HH:mm:ss",System.Globalization.CultureInfo.InvariantCulture).ToString("MM/dd/yyyy")</td>
                    }
                    <td>@obj.stype</td>
                    <td>@obj.remarks</td>
                    <td>@obj.actiondate</td>
                    <td>@obj.actionsdone</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


