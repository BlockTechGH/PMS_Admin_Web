@{
    ViewData["Title"] = "dlogs";
    Layout = "";
}

@model PMS_Admin_Web.Models.Marketing.DlogsModel;

<html>
<head>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link href="~/css/printlandscape.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            window.print();
        })
    </script>
</head>
<body>
    <table class="table-bordered" style=" border: solid; width: 1200px; ">
        <thead>
            <tr>
                <th>
                    <img src="~/icon/q8logo.png" style="width: 140px; height: 100px;" />
                </th>
                <th>
                    <h3>Maintenance Dept Driver Log Sheet</h3>
                </th>
                <th>Print Date : @DateTime.Today.ToShortDateString()</th>
            </tr>
            <tr>
                <th></th>
                <th>
                    <label>Date : @Model.FromDate</label>
                </th>
                <th>Driver Name : @Model.Drivername</th>
            </tr>

        </thead>

    </table>

    <table class="table-bordered" style=" border: solid; width: 1200px; ">
        <thead>
            <tr style="background-color: chocolate; color: antiquewhite;">
                <th></th>
                <th style="width: 100px;"><h4>Schedule Time</h4></th>
                <th style="width: 100px;"><h4>Leasing Executive</h4></th>
                <th style="width: 100px;"><h4>Opening Mileage</h4></th>
                <th style="width: 100px;"><h4>Closing Mileage</h4></th>
                <th style="width: 80px;"><h4>Time Out</h4></th>
                <th style="width: 80px;"><h4>Time In</h4></th>
                <th style="width: 111px;"><h4>Reference No</h4></th>
                <th style="width: 111px;"><h4>Client Name</h4></th>
                <th style="width: 111px;"><h4>Property Name/Address</h4></th>
                <th style="width: 111px;"><h4>LE Signature</h4></th>
                <th style="width: 111px;"><h4>Driver Signature</h4></th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.driverformats)
            {
                <tr style="background-color: burlywood;">
                    <td>@obj.Ftime</td>
                    <td>@obj.Timings</td>
                    <td>@obj.Lename</td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>@obj.Refno</td>
                    <td>@obj.Cname</td>
                    <td>@obj.Pname</td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


