                                                    <a asp-controller="Marketing" asp-action="MarketingLOIUpdate" asp-route-loino="@item.LoiNo"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
