                            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
                            <!--script goes here...-->
                            <script>
                                    $(document).ready(function () {
                                        //start of the document ready function
                                        //delcaring global variable to hold primary key value.
                                        var pryEmpId;
                                        $('.deleteprompt').click(function () {
                                            var confirmMessageBox = confirm('Are you sure you wish to delete this record ?');
                                            if (confirmMessageBox) {
                                                pryEmpId = $(this).attr('id');
                                                //alert(pryEmpId);
                                                $.ajax({
                                                    type: 'GET',
                                                    url: "@Url.Action("DeleteLOI", "LOI")",
                                                    data: { Id: pryEmpId },

                                                    success: function (response) {
                                                        alert(response);
                                                        location.reload();
                                                    },
                                                    error: function (err) {
                                                        alert(err);
                                                        location.reload();
                                                    }
                                                });

                                            }

                                        });

                                        $('#btnSearch').click(function () {
                                            var txtSearchLOI = $('#txtSearchLOI').val();
                                            var clientname;
                                            var loimailstatus;
                                            //var sessionDepartment = $('#sessionDepartment').val();
                                            //var sessionRole = $('#sessionRole').val();

                                            if (txtSearchLOI != '') {
                                                $.ajax({
                                                    type: "POST",
                                                    url: "@Url.Action("SearchLOI", "LOI")",
                                                    data: { loinoKeyword: txtSearchLOI },
                                                    success: function (response) {
                                                        $('#tbody').html('');
                                                        $.each(response, function (k, v) {
                                                            //alert(v.id)
                                                            if (v.clientName.length > 40) {
                                                                clientname = $.trim(v.clientName).substring(0, 40).split(" ").slice(0, -1).join(" ") + "...";
                                                            }
                                                            else {
                                                                clientname = v.clientName;
                                                            }

                                                            if (v.loimailstatus == null) {
                                                                loimailstatus = 'Confirm';
                                                            }
                                                            else {
                                                                loimailstatus = v.loimailstatus;
                                                            }

                                                            $('#tbody').append('<tr>');
                                                            $('#tbody').append('<td hidden>' + v.id + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.loiNo + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.inqno + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.lename + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + clientname + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.clientSource +'</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.propertySource + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.propertyName + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.leasedate + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + v.loiStatus + '</td>');
                                                            $('#tbody').append('<td style="color:black;">' + loimailstatus + '</td>');

                                                            if (v.lccreate != null) {
                                                                $('#tbody').append('<td style="color:black;">' + v.lccreate + '</td>');
                                                            }
                                                            else {
                                                                $('#tbody').append('<td style="text-align: center;"><a href="@Url.Action("CreateLC", "LC")?Id=' + v.id + '">Create LC</a></td>');
                                                            }

                                                            $('#tbody').append('<td style="text-align: center;"><a href="@Url.Action("CreateLC", "LC")?Id=' + v.id + '">View</a></td>');
                                                            $('#tbody').append('<td style="text-align: center;"><a href="@Url.Action("CreateLC", "LC")?Id=' + v.id + '">Cancel</a></td>');
                                                            $('#tbody').append('<td style="text-align: center;"><a href="@Url.Action("EditLOI", "LOI")?Id=' + v.id + '"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>');
                                                            $('#tbody').append('<td style="text-align: center;"><a href="javascript:void(0)" id="' + v.id + '" class="deleteprompt"><i style="color:red" class="fa fa-trash" aria-hidden="true"></i></a></td>');
                                                            $('#tbody').append('</tr>');
                                                            $('.pagination').css('display', 'none');
                                                        });
                                                    }
                                                })
                                            }
                                            else {
                                                $('#tbody').html('');
                                                /*$('#tbody').append('<tr>');*/
                                                $('#tbody').append('<p style="text-align: center;">Search string empty</p>');
                                                /*$('#tbody').append('</tr>');*/
                                            }
                                        })

                                        //end of the docuement ready function
                                    });
                            </script>
                            <div style="overflow-y:auto; overflow-x:auto">
                                <table class="table-bordered" cellpadding="5" cellspacing="5" style="width:100%;">
                                    <thead class="bg-success">
                                        <tr>
                                            <th hidden></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 150px">LOI No</label></th>
                                            <th class="table-bordered"><label style="color: black; font-size: 17px; width: 100px">Inq No</label></th>
