@{
    ViewData["Title"] = "CancellQueriesnole";
    Layout = "";
}

@model PMS_Admin_Web.Models.Marketing.CancellQueriesModel;

<html>
<head>
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <link href="~/css/printlandscape.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            window.print();
        })
    </script>
</head>
<body>
    <table class="table-bordered" style=" border: solid; width: 1200px; ">
        <thead>
            <tr>
                <th>
                    <img src="~/icon/q8logo.png" style="width: 140px; height: 100px; margin-left: -40px;" />
                </th>
                <th>
                    <h3>Cancelled Enquiries</h3>
                </th>
                <th>@DateTime.Today.ToShortDateString()</th>
            </tr>
            <tr>
                <th></th>
                <th>
                    <label>Period : @Model.FromDate - @Model.ToDate</label>
                </th>
                <th>Leasing Executive : @Model.LEname</th>
            </tr>

        </thead>

    </table>

    <table class="table-bordered" style=" border: solid; width: 1200px; ">
        <thead>
            <tr style="background-color: chocolate; color: antiquewhite;">
                <th style="width: 100px;"><h4>Inquiry Date</h4></th>
                <th style="width: 100px;"><h4>Reference No</h4></th>
                <th style="width: 320px;"><h4>Client Name & Mob</h4></th>
                <th style="width: 90px;"><h4>Moving Date</h4></th>
                <th style="width: 115px;"><h4>Date Cancelled</h4></th>
                <th><h4>Reason Of Cancellation</h4></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.cancellqueries)
            {
                <tr style="background-color: burlywood;">
                    <td>@DateTime.ParseExact(obj.EnquiryDate,"MM/dd/yyyy HH:mm:ss",System.Globalization.CultureInfo.InvariantCulture).ToString("dd/MM/yyyy")</td>
                    <td>@obj.CGLREFNO</td>
                    <td>@obj.ClientName & @obj.mobile</td>
                    <td>@DateTime.ParseExact(obj.movingdate,"MM/dd/yyyy HH:mm:ss",System.Globalization.CultureInfo.InvariantCulture).ToString("dd/MM/yyyy")</td>
                    <td>@DateTime.ParseExact(obj.dateofcancel,"MM/dd/yyyy HH:mm:ss",System.Globalization.CultureInfo.InvariantCulture).ToString("dd/MM/yyyy")</td>
                    <td>@obj.reasonofcancellation</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>


