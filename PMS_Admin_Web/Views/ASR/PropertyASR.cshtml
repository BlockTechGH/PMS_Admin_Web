@{
    ViewData["Title"] = Model.PropertyName;
    Layout = "";
}

@model PMS_Admin_Web.Models.ASR.PropertyASRModel;
@using PMS_Admin_Web.Repository;

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <style>
        .box {
            width: 200px;
            height: 77px;
            background-color: #eaeaea;
            border: 1px solid #999999;
            border-radius: 5px;
        }
        .divcell {
            margin-top: 0px;
        }
        .divtable {
            margin-top: 38px;
        }

        /*.trow {
            align-items: center;
            width: 100%;
        }*/
    </style>
</head>
<br />
<body>
    <table class="table-bordered" style=" border: solid; width: 1480px; ">@*margin-left: 55px;*@
        <thead>
            <tr style="text-align: center;">
                <th class="table-bordered" colspan="10" style="background-color: yellow; border: solid;"><label style="color: black; font-size: 17px;">@Model.PropertyName.ToUpper() APARTMENTS AVAILABILITY - OCCUPANCY STATUS AS OF @Model.CurrentDate</label></th>
            </tr>
            <tr>
                <th colspan="10">Address : @Model.Address</th>
            </tr>
            <tr>
                <th colspan="10">No Of Floors : @Model.NoOfFloors</th>
            </tr>
            <tr>
                <th colspan="10">No Of Flats : @Model.NoOfFlats</th>
            </tr>
            <tr>
                <th colspan="10">
                    Amenities :
                    @if (Model.Amenities.Gym != null && Model.Amenities.Gym != "NO")
                    {
                        <label>Gym,</label>
                    }
                    @if (Model.Amenities.Pool != null && Model.Amenities.Pool != "NO")
                    {
                        <label>Swimming Pool,</label>
                    }
                </th>
            </tr>


            <tr style="text-align: center; background-color: #ae7984;">
                <th>Floor</th>
                <th style="width: 90px;">Apt No</th>
                <th>Name</th>
                <th style="width: 50px;">Bed</th>
                <th>Furniture</th>
                <th>Rent</th>
                <th>Payable Rent</th>
                <th>Lease Start</th>
                <th>Lease End</th>
                <th>PM</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Command in Model.Command)
            {
                <tr style="text-align: center;">
                    <td>@Command.Floors</td>
                    <td>Apt #@Command.AptNo</td>
                    @*<td>@CommonRepository.Truncate(Command.name, 20)</td>*@
                    <td>@Command.name</td>
                    <td>@Command.Cbtype</td>
                    <td>@Command.Cftype</td>
                    <td>@Convert.ToDecimal(Command.rent).ToString("0.000")</td>
                    <td>@Convert.ToDecimal(Command.PR).ToString("0.000")</td>
                    <td>@Command.lstart</td>
                    <td>@Command.LEND</td>
                    <td>@Command.PM</td>
                </tr>
            }
        </tbody>
    </table>
    <table class="table-bordered" style="border: solid; width: 1480px; ">@*margin-left: 55px;*@
        <thead>
            <tr style="text-align: center;">
                <th colspan="4" style="background-color: yellow; border: solid;">2 BDR</th>
            </tr>
            <tr style="text-align: center; background-color: #ae7984;">
                <th></th>
                <th>FF</th>
                <th>SF</th>
                <th>UF</th>
            </tr>
        </thead>
        <tbody>
            <tr style="text-align: center;">
                <td>@Model.BDR2.Reserved.APTSTATUS</td>
                <td>@Model.BDR2.Reserved.FF</td>
                <td>@Model.BDR2.Reserved.SF</td>
                <td>@Model.BDR2.Reserved.UF</td>
            </tr>
            <tr style="text-align: center;">
                <td>@Model.BDR2.Rented.APTSTATUS</td>
                <td>@Model.BDR2.Rented.FF</td>
                <td>@Model.BDR2.Rented.SF</td>
                <td>@Model.BDR2.Rented.UF</td>
            </tr>
            <tr style="text-align: center;">
                <td>@Model.BDR2.Vacated.APTSTATUS</td>
                <td>@Model.BDR2.Vacated.FF</td>
                <td>@Model.BDR2.Vacated.SF</td>
                <td>@Model.BDR2.Vacated.UF</td>
            </tr>
        </tbody>
    </table>
    <table class="table-bordered" style="border: solid; width: 1480px; ">@*margin-left: 55px;*@
        <thead>
            <tr style="text-align: center;">
                <th colspan="4" style="background-color: yellow; border: solid;">3 BDR</th>
            </tr>
            <tr style="text-align: center; background-color: #ae7984;">
                <th></th>
                <th>FF</th>
                <th>SF</th>
                <th>UF</th>
            </tr>
        </thead>
        <tbody>
            <tr style="text-align: center;">
                <td>@Model.BDR3.Reserved.APTSTATUS</td>
                <td>@Model.BDR3.Reserved.FF</td>
                <td>@Model.BDR3.Reserved.SF</td>
                <td>@Model.BDR3.Reserved.UF</td>
            </tr>
            <tr style="text-align: center;">
                <td>@Model.BDR3.Rented.APTSTATUS</td>
                <td>@Model.BDR3.Rented.FF</td>
                <td>@Model.BDR3.Rented.SF</td>
                <td>@Model.BDR3.Rented.UF</td>
            </tr>
            <tr style="text-align: center;">
                <td>@Model.BDR3.Vacated.APTSTATUS</td>
                <td>@Model.BDR3.Vacated.FF</td>
                <td>@Model.BDR3.Vacated.SF</td>
                <td>@Model.BDR3.Vacated.UF</td>
            </tr>
        </tbody>
    </table>
    <table class="table-bordered" style="border: solid; width: 1480px; ">@*margin-left: 55px;*@
        <thead>
            <tr style="text-align: center;">
                <th colspan="4" style="background-color: yellow; border: solid;">SHOP</th>
            </tr>
            <tr style="text-align: center; background-color: #ae7984;">
                <th></th>
                <th>UF</th>
            </tr>
        </thead>
        <tbody>
            <tr style="text-align: center;">
                <td>@Model.SHOP.Reserved.APTSTATUS</td>
                <td>@Model.SHOP.Reserved.UF</td>
            </tr>
            <tr style="text-align: center;">
                <td>@Model.SHOP.Rented.APTSTATUS</td>
                <td>@Model.SHOP.Rented.UF</td>
            </tr>
            <tr style="text-align: center;">
                <td>@Model.SHOP.Vacated.APTSTATUS</td>
                <td>@Model.SHOP.Vacated.UF</td>
            </tr>
        </tbody>
    </table>
    @if (Model.STORE1.Reserved.UF != 0 || Model.STORE1.Rented.UF != 0 || Model.STORE1.Vacated.UF != 0)
    {
        <table class="table-bordered" style="border: solid; width: 1480px;" >@*margin-left: 55px;*@
            <thead>
                <tr style="text-align: center;">
                    <th colspan="4" style="background-color: yellow; border: solid;">STORE 1</th>
                </tr>
                <tr style="text-align: center; background-color: #ae7984;">
                    <th></th>
                    <th>UF</th>
                </tr>
            </thead>
            <tbody>
                <tr style="text-align: center;">
                    <td>@Model.STORE1.Reserved.APTSTATUS</td>
                    <td>@Model.STORE1.Reserved.UF</td>
                </tr>
                <tr style="text-align: center;">
                    <td>@Model.STORE1.Rented.APTSTATUS</td>
                    <td>@Model.STORE1.Rented.UF</td>
                </tr>
                <tr style="text-align: center;">
                    <td>@Model.STORE1.Vacated.APTSTATUS</td>
                    <td>@Model.STORE1.Vacated.UF</td>
                </tr>
            </tbody>
        </table>
    }
    @if (Model.STORE2.Reserved.UF != 0 || Model.STORE2.Rented.UF != 0 || Model.STORE2.Vacated.UF != 0)
    {
        <table class="table-bordered" style="border: solid; width: 1480px; ">@*margin-left: 55px;*@
            <thead>
                <tr style="text-align: center;">
                    <th colspan="4" style="background-color: yellow; border: solid;">STORE 2</th>
                </tr>
                <tr style="text-align: center; background-color: #ae7984;">
                    <th></th>
                    <th>UF</th>
                </tr>
            </thead>
            <tbody>
                <tr style="text-align: center;">
                    <td>@Model.STORE2.Reserved.APTSTATUS</td>
                    <td>@Model.STORE2.Reserved.UF</td>
                </tr>
                <tr style="text-align: center;">
                    <td>@Model.STORE2.Rented.APTSTATUS</td>
                    <td>@Model.STORE2.Rented.UF</td>
                </tr>
                <tr style="text-align: center;">
                    <td>@Model.STORE2.Vacated.APTSTATUS</td>
                    <td>@Model.STORE2.Vacated.UF</td>
                </tr>
            </tbody>
        </table>
    }



</body>
</html>