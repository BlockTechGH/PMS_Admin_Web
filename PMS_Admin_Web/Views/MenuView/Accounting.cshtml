@{
    ViewData["Title"] = "Accounting";
    //Layout = "_Layout1";
}

<style>
    .button2:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }
</style>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@ViewBag.Message");
            window.history.back();
        };
        /*location.reload();*/
    </script>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            @*<div class="card" style="color:burlywood">*@
            @*<div class="card-header bg-transparent"></div>*@
            <div class="col-lg-12">
                <form>
                    @*<div class="card-body">*@
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-lg-3">
                            <button class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #e27d60;" asp-action="TemporaryReceipt" asp-controller="Accounts">
                                <div>
                                    <div>
                                        <i class="fa fa-align-justify" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Temporary Receipts</strong>
                                    </div>
                                </div>
                            </button>
                        </div>
                        <div class="col-lg-3">
                            @*<button class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: palevioletred;" asp-action="PropertyList" asp-controller="Accounts" >*@@*asp-route-mode="RECEIVABLE"*@
                            <a class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #123C69 " asp-action="PropertyList" asp-controller="Accounts" asp-route-mode="RECEIVABLE">
                                <div style="margin-top: 21px;">
                                    <div>
                                        <i class="fa-solid fa-file-contract" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Rent Collection</strong>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-3">
                            <a class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #E8A87C " asp-action="LLDetails" asp-controller="Accounts" asp-route-mode="CASHFLOW">
                                <div style="margin-top: 21px;">
                                    <div>
                                        <i class="fa-solid fa-house" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Landlord Details</strong>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <div class="col-lg-3">
                            <button class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #C38D9E " asp-action="SubleaseList" asp-controller="Accounts">
                                <div>
                                    <div>
                                        <i class="fa fa-search" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Sublease</strong>
                                    </div>
                                </div>
                            </button>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-lg-3">
                            <button class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #41B3A3 " asp-action="OtherTypes" asp-controller="Accounts">
                                <div>
                                    <div>
                                        <i class="fa fa-search" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Other Types</strong>
                                    </div>
                                </div>
                            </button>
                        </div>
                        <div class="col-lg-3">
                            <button class="btn btn-primary" style="width: 250px; height: 105px; border-radius: 12px; background-color: #E7717D " asp-action="ExpensesAndReports" asp-controller="Accounts">
                                <div>
                                    <div>
                                        <i class="fa fa-money" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Expenses and Reports</strong>
                                    </div>
                                </div>
                            </button>
                        </div>
                        <div class="col-lg-3">
                            <button class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #9A1750 " asp-action="RentNotPaid" asp-controller="Accounts">
                                <div>
                                    <div>
                                        <i class="fas fa-file-invoice-dollar" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>Rent Not Paid</strong>
                                    </div>
                                </div>
                            </button>
                        </div>
                        <div class="col-lg-3">
                            @*<button class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #123C69 " asp-action="PMES" asp-controller="Accounts" value="pmes">*@
                            <a class="btn btn-primary button2" style="width: 250px; height: 105px; border-radius: 12px; background-color: #123C69 " asp-action="PropertyList" asp-controller="Accounts" asp-route-mode="pmes">
                                <div style="margin-top: 21px;">
                                    <div>
                                        <i class="fa fa-calendar" style="font-size:24px"></i>
                                    </div>
                                    <div>
                                        <strong>PMES</strong>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    <br />

                    @*</div>*@
                </form>
            </div>
            @*</div>*@
        </div>
    </div>
</div>