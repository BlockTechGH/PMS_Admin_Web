                                    </tr>
                                </thead>
                                <tbody id="tbody">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="color:black;">@item.Pname</td>
                                            <td style="color:black;">@item.Aptno</td>
                                            <td style="color:black;">@item.Feature</td>
                                            <td style="color:black;">@item.Old</td>
                                            <td style="color:black;">@item.New</td>
                                            <td style="color:black;">@item.Doc</td>
                                            <td style="color:black;">@item.Changeby</td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                    <br />

                </form>

            </div>
        </div>
    </div>
</div>
