<script>
    $(document).ready(function () {
        $('#btnviewall').click(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("BtnViewAllASRSearchProperty", "MenuView")",
                success: function (response) {
                    $('#tbody').html('');
                    $.each(response, function (k, v) {
                        $('#tbody').append(`<tr>
                                                <td style="color:black;">${v.pname}</td>
                                                <td style="color:black;">${v.aptno}</td>
                                                <td style="color:black;">${v.feature}</td>
                                                <td style="color:black;">${v.old}</td>
                                                <td style="color:black;">${v.new}</td>
                                                <td style="color:black;">${v.doc}</td>
                                                <td style="color:black;">${v.changeby}</td>
                                            </tr>`);

                    });
                }
            })
        })

        $('#btnviewcurrentmonthchanges').click(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("BtnCurrentMonthChangeASRSearchProperty", "MenuView")",
                success: function (response) {
                    $('#tbody').html('');
                    $.each(response, function (k, v) {
                        $('#tbody').append(`<tr>
                                                <td style="color:black;">${v.pname}</td>
                                                <td style="color:black;">${v.aptno}</td>
                                                <td style="color:black;">${v.feature}</td>
                                                <td style="color:black;">${v.old}</td>
                                                <td style="color:black;">${v.new}</td>
                                                <td style="color:black;">${v.doc}</td>
                                                <td style="color:black;">${v.changeby}</td>
                                            </tr>`);

                    });
                }
            })
        })

        $('#btnviewclastmonthchanges').click(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("BtnLastMonthChangeASRSearchProperty", "MenuView")",
                success: function (response) {
                    $('#tbody').html('');
                    $.each(response, function (k, v) {
                        $('#tbody').append(`<tr>
                                                <td style="color:black;">${v.pname}</td>
                                                <td style="color:black;">${v.aptno}</td>
                                                <td style="color:black;">${v.feature}</td>
                                                <td style="color:black;">${v.old}</td>
                                                <td style="color:black;">${v.new}</td>
                                                <td style="color:black;">${v.doc}</td>
                                                <td style="color:black;">${v.changeby}</td>
                                            </tr>`);

                    });
                }
            })
        })

        $('#btnchangesseen').click(function () {
            var confirmmessage = confirm('Are you Sure , changes seen');
            if (confirmmessage) {
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("BtnChangesSeenASRSearchProperty", "MenuView")",
                    success: function (response) {
                        alert(response);
                    }
                })
            }
        })
    })
</script>

@*<div class="row">*@
<div class="col-lg-12">
    <div class="card" style="color:burlywood">
        <div class="col-lg-12">
            <div class="card-body">
                <form>
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-3">
                                <h5 style="color:black"><strong>ASR - Search Property</strong></h5>
                            </div>
                            <div class="col-lg-3"></div>
                            <div class="col-lg-3"></div>
                            <div class="col-lg-3">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <button id="btnviewall" type="button" class="btn btn-primary" style="border-radius: 10px; margin-top: 31px;">View All</button>
                                    </div>
                                    <div class="col-lg-3">
                                        <button id="btnviewcurrentmonthchanges" type="button" class="btn btn-primary" style="border-radius: 10px; margin-top: 31px; margin-left: -345px;">View Current Month Changes</button>
                                    </div>
                                    <div class="col-lg-3">
                                        <button id="btnviewclastmonthchanges" type="button" class="btn btn-primary" style="border-radius: 10px; margin-top: 31px; margin-left: -535px;">View Last Month Changes</button>
                                    </div>
