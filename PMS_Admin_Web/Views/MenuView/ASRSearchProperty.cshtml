                                    <tr>
                                        <th class="table-bordered"><label style="color: black; font-size: 17px; width: 200px;">Property Name</label></th>
                                        <th class="table-bordered"><label style="color: black; font-size: 17px; width: 125px;">Apt No</label></th>
                                        <th class="table-bordered"><label style="color: black; font-size: 17px; width: 165px;">Feature</label></th>
