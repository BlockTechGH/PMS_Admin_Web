        $('#btnview').click(function () {
            var statementmonth = $('#statementmonth').val();
            var pname = $('#pname :selected').val();

            if (statementmonth == null || statementmonth == "") {
                alert('Select the Statement month and year');
                return false;
            }

            if (pname == null || pname == "") {
                alert('Select the Property');
                return false;
            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("Loadpmepropgrid", "Accounts")",
                data: { statementmonth: statementmonth, pname: pname},
                success: function (response) {
                    $('#totalamount').val(response.maintotamtxt);
                    if (response.pmepropgrid != null) {
                        $('#tbody').html('');
                        $.each(response.pmepropgrid, function (k, v) {
                            var date = v.date.split("T");

                            var description = v.description;
                            if (description == null)
                                description = "";

                            var pname = v.pname;
                            if (pname == null)
                                pname = "";

                            var aptno = v.aptno;
                            if (aptno == null)
                                aptno = "";

                            var uprice = v.uprice;
                            if (uprice == null)
                                uprice = "";

                            var qty = v.qty;
                            if (qty == null)
                                qty = "";

                            var invno = v.invno;
                            if (invno == null)
                                invno = "";

                            var exp = v.exp;
                            if (exp == null)
                                exp = "";

                            var category = v.category;
                            if (category == null)
                                category = "";

                            var no = v.no;
                            if (no == null)
                                no = "";

                            var accounts = v.accounts;
                            if (accounts == null)
                                accounts = "";

                            $('#tbody').append(`<tr>
                                                    <td hidden>${v.id}</td>
                                                    <td style="color:black;">${date[0]}</td>
                                                    <td style="color:black;">${description}</td>
                                                    <td style="color:black;">${pname}</td>
                                                    <td style="color:black;">${aptno}</td>
                                                    <td style="color:black;">${uprice}</td>
                                                    <td style="color:black;">${qty}</td>
                                                    <td style="color:black;">${invno}</td>
                                                    <td style="color:black;">${v.amt}</td>
                                                    <td style="color:black;">${exp}</td>
                                                    <td style="color:black;">${category}</td>
                                                    <td style="color:black;">${no}</td>
                                                    <td style="color:black;">${accounts}</td>
                                                </tr>`);
                        });
                    }
                    else {
                        $('#tbody').append('<p style="text-align: center;">Search string empty</p>');
                    }
                }
            })
        })

        $('#btnviewall').click(function () {
            var statementmonth = $('#statementmonth').val();
            var pname = $('#pname :selected').val();

            if (statementmonth == null || statementmonth == "") {
