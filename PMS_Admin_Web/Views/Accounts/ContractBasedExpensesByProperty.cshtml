                            var uprice = v.uprice;
                            if (uprice == null)
                                uprice = "";

                            var qty = v.qty;
                            if (qty == null)
                                qty = "";

                            var invno = v.invno;
                            if (invno == null)
                                invno = "";

                            var exp = v.exp;
                            if (exp == null)
                                exp = "";

                            var category = v.category;
                            if (category == null)
