<div class="card" style="color:burlywood">
    <div class="col-lg-12">
        <div class="card-body">
            @*<input type="hidden" id="sessionDepartment" value="@Context.Session.GetString("CurrentUserDepartment")" />
                <input type="hidden" id="sessionRole" value="@Context.Session.GetString("CurrentUserRole")" />*@
            <form method="post">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-3">
                            <h5 style="color:black;"><strong>Select Property Name</strong></h5>
                        </div>
                        <div class="col-lg-3"></div>
                        <div class="col-lg-3"></div>
                        <div class="col-lg-3 float-right">
                            @*<button asp-action="" class="btn btn-primary"> <i class="fa fa-plus-square-o" style="font-size:20px"></i></button>*@
                        </div>
                    </div>
                    <br />
                            
                    @*<input type="hidden" id="oreceipt" />*@
                    <div style="overflow-y:auto">
                        <table class="table-bordered" cellpadding="5" cellspacing="5" style="width:100%;">
                            <thead class="bg-success">
                                <tr>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 140px;">Property Name</label></th>
                                    <th class="table-bordered" colspan="3"><label style="color: black; font-size: 17px; width: 60px; text-align: center; margin-right: -45px; ">Actions</label></th>
                                </tr>
                            </thead>
                            <tbody id="tbody" class="bg-white">
                                @foreach (var item in Model.propertylist)
                                {
                                    <tr>
                                        <td style="color:black;">@item</td>
                                        @if(Model.mode =="RECEIVABLE")
                                        {
                                            <td style="text-align: center;">
                                                <a asp-action="TaskModule" asp-controller="Accounts" asp-route-bldngname="@item"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            </td>
                                        }
                                        @if(Model.mode == "CASHFLOW")
                                        {
                                            <td style="text-align: center;">
                                                <a asp-action="CASHFLOW" asp-controller="Accounts" asp-route-bldngname="@item"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            </td>
                                        }
                                        @if(Model.mode == "state")
                                        {
                                            <td style="text-align: center;">
                                                <a asp-action="" asp-controller="Accounts" asp-route-bldngname="@item"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            </td>
                                        }
                                        @if(Model.mode == "recipt")
                                        {
                                            <td style="text-align: center;">
                                                <a asp-action="" asp-controller="Accounts" asp-route-bldngname="@item"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            </td>
                                        }
                                        @if(Model.mode == "pmes")
                                        {
                                            <td style="text-align: center;">
                                                <a asp-action="Datelistpme" asp-controller="Accounts" asp-route-bldngname="@item"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            </td>
                                        }
                                                
                                        @*<td style="text-align: center;">
                                            <a href="javascript:void(0)" id="@item.Id" data-voucher="@item.Voucherno" class="deleteprompt"><i style="color:red" class="fa fa-trash" aria-hidden="true"></i></a>
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </form>

        </div>
    </div>
</div>
