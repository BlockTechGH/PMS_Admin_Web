                                                <td style="color:black;">${v.cash}</td>
                                                <td style="color:black;">${v.knet}</td>
                                                <td style="color:black;">${v.cheque}</td>
                                                <td style="color:black;">${v.bt}</td>
                                                <td style="color:black;">${v.amtType}</td>
