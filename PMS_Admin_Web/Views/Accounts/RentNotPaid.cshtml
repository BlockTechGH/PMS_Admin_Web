        $('#btnview').click(function () {
            var month = $('#month').val();

            if (month == null || month == "") {
                alert('Select the month and year');
                return false;
            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("RentNotPaidList", "Accounts")",
                data: { month: month},
                success: function (response) {
                    $('#totalamount').val(response.maintotamtxt);
                    if (response != 0) {
                        $('#tbody').html('');
                        $.each(response, function (k, v) {
                            $('#tbody').append(`<tr>
                                                    <td style="color:black;">${v.pname}</td>
                                                    <td style="color:black;">${v.aptno}</td>
                                                </tr>`);
                        });
                    }
                    else {
                        $('#tbody').append('<p style="text-align: center;color: black;">Search string empty</p>');
                    }
                }
            })
        })

        //end of the document ready function
    });
</script>


