@model X.PagedList.IPagedList<PMS_Admin_Web.Models.LC.VacatingsAndTlcGridModel>
@using X.PagedList.Mvc.Core;

@using PMS_Admin_Web.Repository

@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="PendingVacating" asp-controller="LC">
                <div>
                    <br />
                    <div style="overflow-y:auto">
                        <table class="table-bordered" cellpadding="5" cellspacing="5" style="width:100%;">
                            <thead class="bg-success">
                                <tr>
                                    <th hidden></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 170px;">Property Name</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 100px;">Apt</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px;">Type</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px;">Bed</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 170px;">Tenant Name</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 130px;">Lease Start Date</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 121px;">Lease End Date</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px;">Contact</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 170px;">Nationality</label></th>
                                    <th class="table-bordered"><label style="color: black; font-size: 17px; width: 115px;">Move Out On</label></th>
                                    <th class="table-bordered" colspan="3"><label style="color: black; font-size: 17px; text-align: center; width: 100px;">Actions</label></th>
                                </tr>
                            </thead>
                            <tbody class="bg-white">
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td hidden>@item.Id</td>
                                        <td style="color:black;">@CommonRepository.Truncate(item.PropertyName, 20)</td>
                                        <td style="color:black;">@item.AptNo</td>
                                        <td style="color:black;">@item.Type</td>
                                        <td style="color:black;">@item.Bed</td>
                                        <td style="color:black;">@CommonRepository.Truncate(item.TenantName, 20)</td>
                                        <td style="color:black;">@item.LeaseStartDate.ToShortDateString()</td>
                                        <td style="color:black;">@item.LeaseEndDate.ToShortDateString()</td>
                                        <td style="color:black;">@item.ContactNo</td>
                                        <td style="color:black;">@item.Nationality</td>
                                        <td style="color:black;">@item.MoveOutOn.ToShortDateString()</td>
                                        <td style="text-align: center;">
                                            <a asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                        </td>
                                        <td style="text-align: center;">
                                            <a asp-route-id="@item.Id"><i style="color:red" class="fa fa-trash" aria-hidden="true"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <br />
                    <div id="container" style="margin-left: 120px">
                        <p></p>
                        <p></p>
                        <div class="pagination">
                            <div class="row">
                                <div class="col-lg-12">
                                    @Html.PagedListPager(Model, page => Url.Action("VacatingsAndTlc", new { page, pageSize = Model.PageSize }))
                                </div>
                            </div>
                        </div>
                        @*<div class="row">
                                <div class="col-lg-12" style="padding: 10px;padding-top: 50px;margin-left: 215px;">
                                    Showing @Model.FirstItemOnPage to @Model.LastItemOnPage of @Model.TotalItemCount Products
                                </div>
                            </div>*@
                    </div>
                    <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />
                </div>
            </form>
        </div>
    </div>
</div>