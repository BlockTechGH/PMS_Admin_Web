                                        </td>
                                        <td>
                                            <input type="button" id="btnAdd" value="Add" />
                                        </td>
                                    </tr>
                                </tfoot>*@
                                            </table>
                                        </div>
                                    </div>
                                    @*</div>*@
                                </div>
                                @*</div>*@
                            </div>
                            <br />

                            <input type="hidden" id="hfCurrentPageIndex" name="currentPageIndex" />

                    
                            <!--popup for MailID Adding-->
                            <div id="AddMailId" class="modal" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="card">
                                        @*<form asp-action="AddMailIDBox" asp-controller="LC">*@
                                        <div class="card-body">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Add Mail ID</h5>
