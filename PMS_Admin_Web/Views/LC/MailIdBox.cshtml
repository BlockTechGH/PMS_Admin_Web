                                                    <div class="modal-footer">
                                                        <button type="submit" class="btn btn-primary">Create</button>
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        @*</form>*@
                                    </div>
                                </div>
                            </div>
