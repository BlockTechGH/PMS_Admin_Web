                                                    </tr>
                                                </thead>
                                                <tbody class="bg-white">
                                                    @foreach (var item in Model.CC)
                                                    {
                                                        <tr>
                                                            <td hidden>@item.Id</td>
                                                            <td style="color:black;">@item.Mailid</td>

                                                            @*<td>
                                                <a asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                                            </td>*@
                                                            <td style="text-align: center;">
                                                                <a href="javascript:void(0)" id="@item.Id" class="deleteprompt"><i style="color:red" class="fa fa-trash" aria-hidden="true"></i></a>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
